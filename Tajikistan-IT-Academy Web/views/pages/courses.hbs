 <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMsg}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
 {{# each courses}}
<div class="row">
  <section class="s">
  {{# each this}}
  
  <div class="col-sm-6 col-md-4">
    
    <div class="thumbnail">
      <img class="emblemCourse" src="{{this.imagePath}}" alt="...">
      <div class="caption">    
        <h5><i class="fas {{this.departmentImageClass}}"></i>  {{this.department}} 
        <a id="add-to-profile" href="/add-to-profile/{{this._id}}"><button type="button" class="btn btn-success">ADD TO PROFILE</button></a></h5>
        <a href="/get-course/{{this.Title}}"><h3 id="description">{{this.Title}}</h3></a>
        <p>{{this.decsription}}</p>  
              <i id="money" class="fas fa-money-bill-wave"></i>{{this.moneyDescription}}
              <i id="clock" class="fas fa-clock"></i>{{this.clockDescription}}
              <i id="calendar" class="fas fa-calendar-alt"></i>{{this.calendarDescription}}
              
    </div>
    </div>  
    
  </div>
  {{/each}}
  </section>
</div>
 {{/each}}

       